{
  "name": "activity-log",
  "type": "module",
  "scripts": {
    "dev": "CLOUDFLARE_ENV=local vite dev",
    "deploy-prod": "pnpm run generate && CLOUDFLARE_ENV=prod vite build && wrangler deploy",
    "typecheck": "tsc -b",
    "generate-wrangler": "wrangler types --env-interface CloudflareBindings --env prod ./worker/cloudflare.d.ts",
    "generate-better-auth": "pnpm dlx @better-auth/cli@latest generate --config ./better-auth.config.ts --output ./worker/db/schema.ts --yes",
    "generate": "pnpm run generate-wrangler && pnpm run generate-better-auth",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "better-auth": "^1.4.6",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.10.8",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.2.3",
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.49.0",
    "vite": "^6.3.5",
    "vite-ssr-components": "^0.5.1",
    "wrangler": "^4.17.0"
  }
}
